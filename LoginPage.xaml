<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EkandidatoApp.LoginPage"
             Shell.FlyoutBehavior="Disabled"
             BackgroundColor="{StaticResource PrimaryGreen}">

    <Grid RowDefinitions="3*,4*">

        <StackLayout Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center">
            <Image Source="ekandidato_logo.png"
                   HeightRequest="200"
                   WidthRequest="200"
                   Aspect="AspectFit"/>
        </StackLayout>

        <Border Grid.Row="1"
                BackgroundColor="White"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 0,80,0,0"
                Padding="30">
            <Border.Shadow>
                <Shadow Brush="#000000"
                Offset="5,6"
                Radius="12"
                Opacity="0.90"/>
            </Border.Shadow>

            <VerticalStackLayout Spacing="20">

                <Label Text="Login"
                           FontFamily="Poppins"
                           FontSize="35"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="Black"/>

                <Label Text="Input student number to login."
                           FontFamily="Poppins"
                           FontSize="12"
                           TextColor="#808080"
                           HorizontalOptions="Center"/>

                <VerticalStackLayout>
                    <Label Text="STUDENT NUMBER"
                               FontFamily="Poppins"
                               FontSize="12"
                               TextColor="Black"/>
                    <Border Stroke="#D9D9D9"
                                StrokeThickness="1"
                                BackgroundColor="White"
                                StrokeShape="RoundRectangle 14"
                                Padding="0"
                                Margin="0,5,0,0">
                        <Entry x:Name="StudentNumberEntry"
                                   Placeholder="0200012345"
                                   FontFamily="Poppins"
                                   FontSize="14"
                                   Keyboard="Numeric"
                                   TextColor="Black"
                                   PlaceholderColor="#A0A0A0" /> 
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Text="PASSWORD"
                               FontFamily="Poppins"
                               FontSize="12"
                               TextColor="Black"/>
                    <Border Stroke="#D9D9D9"
                                StrokeThickness="1"
                                BackgroundColor="White"
                                StrokeShape="RoundRectangle 14"
                                Padding="0,0,10,0"
                                Margin="0,5,0,0">
                        <Grid ColumnDefinitions="*,40">
                            <Entry x:Name="PasswordEntry"
                                       Placeholder="Password"
                                       IsPassword="True"
                                       FontFamily="Poppins"
                                       FontSize="14"
                                       TextColor="Black"
                                       PlaceholderColor="#A0A0A0"
                                       Grid.Column="0"/>
                            <Grid Grid.Column="1"
                                        WidthRequest="24"
                                        HeightRequest="24"
                                        HorizontalOptions="End"
                                        VerticalOptions="Center">
                                <ImageButton x:Name="TogglePasswordButton"
                                         Source="eye_open.png"
                                         BackgroundColor="Transparent"
                                         Clicked="OnTogglePasswordClicked"
                                         Grid.Column="1"/>
                            </Grid>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <Button x:Name="LoginButton"
                            Text="Log in"
                            FontFamily="Poppins"
                            FontSize="16"
                            TextColor="White"
                            BackgroundColor="#2E7D32"
                            CornerRadius="15"
                            HeightRequest="50"
                            WidthRequest="250"
                            Clicked="OnLogInClicked"/>

                <Label x:Name="MessageLabel"
                               FontFamily="Poppins" 
                                FontSize="12"
                                TextColor="Red"
                                HorizontalOptions="Center"
                                IsVisible="{Binding IsMessageVisible}"/>

                <Button Text="Change password / Forgot Password?"
                           FontFamily="Poppins"
                           FontSize="12"
                           TextColor="#808080"
                           BackgroundColor="Transparent"
                           HorizontalOptions="Center"/>
                <Label Text="Need Help?"
                           FontFamily="Poppins"
                           FontSize="12"
                           TextColor="#2E7D32"
                           HorizontalOptions="Center"/>

            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
