<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EkandidatoApp.AboutUs"
             Title="About Us"
             BackgroundColor="#E5F3E5">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <VerticalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,20,0,20">
                <Label Text="Ekandidato App"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="#2E6A3E"
                       HorizontalTextAlignment="Center" />
                <Label Text="The Team Behind the App"
                       FontSize="14"
                       TextColor="#666666"
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="15">
                <Label Text="Our Team"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="#2E6A3E" />

                <FlexLayout JustifyContent="SpaceAround" Wrap="Wrap" Margin="0,10,0,0">
                    <VerticalStackLayout HorizontalOptions="Center" WidthRequest="100" Margin="5">
                        <Border StrokeShape="RoundRectangle 50" HeightRequest="80" WidthRequest="80"
                                BackgroundColor="#FFFFFF" StrokeThickness="0">
                            <Image Source="marieden.jpg"
                                   Aspect="AspectFit"
                                   WidthRequest="76" HeightRequest="76"
                                   HorizontalOptions="Center" VerticalOptions="Center" />
                        </Border>
                        <Label Text="Marieden Daniel" FontSize="13" FontAttributes="Bold" TextColor="#666666" HorizontalTextAlignment="Center" Margin="0,5,0,0"/>
                        <Label Text="Project Leader, UI and Database Designer" FontSize="11" TextColor="#999999" HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout HorizontalOptions="Center" WidthRequest="100" Margin="5">
                        <Border StrokeShape="RoundRectangle 50" HeightRequest="80" WidthRequest="80"
                                BackgroundColor="#FFFFFF" StrokeThickness="0">
                            <Image Source="benj.jpg"
                                   Aspect="AspectFit"
                                   WidthRequest="76" HeightRequest="76"
                                   HorizontalOptions="Center" VerticalOptions="Center" />
                        </Border>
                        <Label Text="Benedict Callanta" FontSize="13" FontAttributes="Bold" TextColor="#666666" HorizontalTextAlignment="Center" Margin="0,5,0,0"/>
                        <Label Text="BackEnd Developer" FontSize="11" TextColor="#999999" HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout HorizontalOptions="Center" WidthRequest="100" Margin="5">
                        <Border StrokeShape="RoundRectangle 50" HeightRequest="80" WidthRequest="80"
                                BackgroundColor="#FFFFFF" StrokeThickness="0">
                            <Image Source="khaylyn.jpg"
                                   Aspect="AspectFit"
                                   WidthRequest="76" HeightRequest="76"
                                   HorizontalOptions="Center" VerticalOptions="Center" />
                        </Border>
                        <Label Text="Khaylyn Resurrecion" FontSize="13" FontAttributes="Bold" TextColor="#666666" HorizontalTextAlignment="Center" Margin="0,5,0,0"/>
                        <Label Text="UI Designer" FontSize="11" TextColor="#999999" HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout HorizontalOptions="Center" WidthRequest="100" Margin="5">
                        <Border StrokeShape="RoundRectangle 50" HeightRequest="80" WidthRequest="80"
                                BackgroundColor="#FFFFFF" StrokeThickness="0">
                            <Image Source="kim.jpg"
                                   Aspect="AspectFit"
                                   WidthRequest="76" HeightRequest="76"
                                   HorizontalOptions="Center" VerticalOptions="Center" />
                        </Border>
                        <Label Text="Kim Angella Sales" FontSize="13" FontAttributes="Bold" TextColor="#666666" HorizontalTextAlignment="Center" Margin="0,5,0,0"/>
                        <Label Text="BackEnd Developer and Database Designer" FontSize="11" TextColor="#999999" HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout HorizontalOptions="Center" WidthRequest="100" Margin="5">
                        <Border StrokeShape="RoundRectangle 50" HeightRequest="80" WidthRequest="80"
                                BackgroundColor="#FFFFFF" StrokeThickness="0">
                            <Image Source="anjo.jpg"
                                   Aspect="AspectFit"
                                   WidthRequest="76" HeightRequest="76"
                                   HorizontalOptions="Center" VerticalOptions="Center" />
                        </Border>
                        <Label Text="Anjo Juan Telo" FontSize="13" FontAttributes="Bold" TextColor="#666666" HorizontalTextAlignment="Center" Margin="0,5,0,0"/>
                        <Label Text="BackEnd Developer" FontSize="11" TextColor="#999999" HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </FlexLayout>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="15" Margin="0,30,0,0">
                <Label Text="Contact Us"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="#2E6A3E" />
                <Label Text="Don't hesitate to contact us whether you have a suggestion for our improvement, a complaint to discuss, or an issue to solve."
                       FontSize="14"
                       TextColor="#666666" />

                <Grid ColumnDefinitions="*,*">
                    <Border Grid.Column="0" StrokeShape="RoundRectangle 10" BackgroundColor="White" Padding="8" Margin="0,0,5,0">
                        <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                            <Image Source="call_icon.png" HeightRequest="40" WidthRequest="40" Aspect="AspectFit" />
                            <Label Text="Call us" FontSize="16" FontAttributes="Bold" TextColor="#2E6A3E" HorizontalTextAlignment="Center"/>
                            <Label Text="Our team is on the line now: 9-5" FontSize="12" TextColor="#999999" HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Border>
                    <Border Grid.Column="1" StrokeShape="RoundRectangle 10" BackgroundColor="White" Padding="8" Margin="5,0,0,0">
                        <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                            <Image Source="email_icon.png" HeightRequest="40" WidthRequest="40" Aspect="AspectFit" />
                            <Label Text="Email us" FontSize="16" FontAttributes="Bold" TextColor="#2E6A3E" HorizontalTextAlignment="Center"/>
                            <Label Text="Our team will reply in 24 hrs" FontSize="12" TextColor="#999999" HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>
                <Label Text="Connect with us"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="#666666"
                       Margin="0,20,0,0" />

                <VerticalStackLayout Spacing="15">
                    <Border StrokeShape="RoundRectangle 10" BackgroundColor="White" Padding="15">
                        <Grid ColumnDefinitions="40,*,Auto">
                            <Image Source="instagram_icon.png" Grid.Column="0" HeightRequest="30" WidthRequest="30" VerticalOptions="Center" />
                            <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center" Margin="10,0,0,0">
                                <Label Text="Instagram" FontSize="14" FontAttributes="Bold" TextColor="#666666"/>
                                <Label Text="1.2K followers • 735 Posts" FontSize="11" TextColor="#999999"/>
                            </VerticalStackLayout>
                            <Image Source="external_link_icon.png" Grid.Column="2" HeightRequest="20" WidthRequest="20" VerticalOptions="Center" HorizontalOptions="End" />
                        </Grid>
                    </Border>
                    <Border StrokeShape="RoundRectangle 10" BackgroundColor="White" Padding="15">
                        <Grid ColumnDefinitions="40,*,Auto">
                            <Image Source="facebook_icon.png" Grid.Column="0" HeightRequest="30" WidthRequest="30" VerticalOptions="Center" />
                            <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center" Margin="10,0,0,0">
                                <Label Text="Facebook" FontSize="14" FontAttributes="Bold" TextColor="#666666"/>
                                <Label Text="2.5K followers • 130 Posts" FontSize="11" TextColor="#999999"/>
                            </VerticalStackLayout>
                            <Image Source="external_link_icon.png" Grid.Column="2" HeightRequest="20" WidthRequest="20" VerticalOptions="Center" HorizontalOptions="End" />
                        </Grid>
                    </Border>
                    <Border StrokeShape="RoundRectangle 10" BackgroundColor="White" Padding="15">
                        <Grid ColumnDefinitions="40,*,Auto">
                            <Image Source="whatsapp_icon.png" Grid.Column="0" HeightRequest="30" WidthRequest="30" VerticalOptions="Center" />
                            <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center" Margin="10,0,0,0">
                                <Label Text="Whatsapp" FontSize="14" FontAttributes="Bold" TextColor="#666666"/>
                                <Label Text="Available now: 9-5" FontSize="11" TextColor="#999999"/>
                            </VerticalStackLayout>
                            <Image Source="external_link_icon.png" Grid.Column="2" HeightRequest="20" WidthRequest="20" VerticalOptions="Center" HorizontalOptions="End" />
                        </Grid>
                    </Border>
                </VerticalStackLayout>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>