<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EkandidatoApp.PollHistory"
             Title="Poll History"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">

                <Border Grid.Column="0" StrokeShape="RoundRectangle 10,10,10,10" StrokeThickness="0" BackgroundColor="#F5F5F5" Padding="15">
                    <StackLayout Orientation="Horizontal" Spacing="10" VerticalOptions="Center">
                        <Label Text="ðŸ“Š" FontSize="24" TextColor="#333333" VerticalOptions="Center" />
                        <StackLayout Spacing="2">
                            <Label Text="Total Elections" FontSize="15" TextColor="Black" />
                            <Label Text="8" FontSize="Title" FontAttributes="Bold" TextColor="Black" />
                        </StackLayout>
                    </StackLayout>
                </Border>

                <Border Grid.Column="1" StrokeShape="RoundRectangle 10,10,10,10" StrokeThickness="0" BackgroundColor="#F5F5F5" Padding="15">
                    <StackLayout Orientation="Horizontal" Spacing="10" VerticalOptions="Center">
                        <Label Text="â†—ï¸" FontSize="20" TextColor="Black" VerticalOptions="Center" />
                        <StackLayout Spacing="2">
                            <Label Text="Average Turnouts" FontSize="15" TextColor="Black" />
                            <Label Text="47.83" FontSize="Body" FontAttributes="Bold" TextColor="Black" />
                        </StackLayout>
                    </StackLayout>
                </Border>
            </Grid>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                <Border Grid.Column="0" StrokeShape="RoundRectangle 5" StrokeThickness="1" Stroke="LightGray" Padding="5">
                    <Picker Title="All status" x:Name="StatusPicker" SelectedIndexChanged="OnFilterChanged" />
                </Border>

                <Border Grid.Column="1" StrokeShape="RoundRectangle 5" StrokeThickness="1" Stroke="LightGray" Padding="5">
                    <Picker Title="Year" x:Name="YearPicker" SelectedIndexChanged="OnFilterChanged" />
                </Border>
            </Grid>

            <BoxView HeightRequest="1" Color="#EEEEEE" />

            <Border StrokeShape="RoundRectangle 10,10,10,10" StrokeThickness="0" BackgroundColor="White" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Total Votes" FontSize="Large" FontAttributes="Bold" TextColor="Black" />
                    <Grid HeightRequest="200" BackgroundColor="#F9F9F9">
                        <Label Text="Total Votes Graph Placeholder" HorizontalOptions="Center" VerticalOptions="Center" TextColor="#AAAAAA" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <BoxView HeightRequest="1" Color="#EEEEEE" />

            <Border StrokeShape="RoundRectangle 10,10,10,10" StrokeThickness="0" BackgroundColor="White" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Votes Turnout" FontSize="Large" FontAttributes="Bold" TextColor="Black" />
                    <Grid HeightRequest="200" BackgroundColor="#F9F9F9">
                        <Label Text="Votes Turnout Graph Placeholder" HorizontalOptions="Center" VerticalOptions="Center" TextColor="#AAAAAA" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <BoxView HeightRequest="1" Color="#EEEEEE" />

            <Border StrokeShape="RoundRectangle 10,10,10,10" StrokeThickness="0" BackgroundColor="White" Padding="15">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Legends" FontSize="Large" FontAttributes="Bold" TextColor="Black" />
                    <FlexLayout JustifyContent="Start" Wrap="Wrap">

                        <HorizontalStackLayout Spacing="5" WidthRequest="150" Margin="0,0,25,15">
                            <BoxView Color="Red" WidthRequest="15" HeightRequest="15" HorizontalOptions="Start" VerticalOptions="Center" />
                            <Label Text="President" VerticalOptions="Center" TextColor="Black" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="5" WidthRequest="150" Margin="0,0,25,15">
                            <BoxView Color="Orange" WidthRequest="15" HeightRequest="15" HorizontalOptions="Start" VerticalOptions="Center" />
                            <Label Text="Vice-President" VerticalOptions="Center" TextColor="Black" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="5" WidthRequest="150" Margin="0,0,25,15">
                            <BoxView Color="Blue" WidthRequest="15" HeightRequest="15" HorizontalOptions="Start" VerticalOptions="Center" />
                            <Label Text="Secretary" VerticalOptions="Center" TextColor="Black" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="5" WidthRequest="150" Margin="0,0,25,15">
                            <BoxView Color="Green" WidthRequest="15" HeightRequest="15" HorizontalOptions="Start" VerticalOptions="Center" />
                            <Label Text="Treasurer" VerticalOptions="Center" TextColor="Black" />
                        </HorizontalStackLayout>

                    </FlexLayout>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>